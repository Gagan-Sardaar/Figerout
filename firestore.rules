
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if a user is an admin.
    // This is allowed because a user can always read their own document to check their role.
    function isAdmin(userId) {
      return exists(/databases/$(database)/documents/users/$(userId)) &&
             get(/databases/$(database)/documents/users/$(userId)).data.role == 'Admin';
    }

    // User Profiles
    match /users/{userId} {
      // A user can read their own profile. An admin can read any profile.
      allow read: if request.auth != null && (request.auth.uid == userId || isAdmin(request.auth.uid));
      // An admin can update any user profile.
      allow update: if request.auth != null && isAdmin(request.auth.uid);
    }
    
    // User-specific saved colors
    match /users/{userId}/colors/{colorId} {
      // Users can read, write, and delete their own colors.
      allow read, write, delete: if request.auth != null && request.auth.uid == userId;
    }

    // Static pages (e.g., about-us, privacy-policy)
    match /pages/{pageSlug} {
      // Anyone can read static pages.
      allow read: if true;
      // Only admins can create or update pages.
      allow write: if request.auth != null && isAdmin(request.auth.uid);
    }
  }
}
