rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if the requesting user is an Admin
    function isAdmin() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Admin';
    }

    // Users can manage their own profile, Admins can manage any profile
    match /users/{userId} {
      allow read: if request.auth.uid == userId || isAdmin();
      allow update: if request.auth.uid == userId || isAdmin();
      // Only an authenticated user can create their own document
      allow create: if request.auth.uid == userId;
      // No one can delete user documents directly through the client
      allow delete: if false;

      // Rules for the 'colors' subcollection
      match /colors/{colorId} {
        allow read, write: if request.auth.uid == userId || isAdmin();
      }

      // Rules for the 'notifications' subcollection
      match /notifications/{notificationId} {
        allow read: if request.auth.uid == userId;
        // Admins can create notifications for users.
        allow create: if isAdmin();
        // Users can only update the 'read' status of their own notifications.
        allow update: if request.auth.uid == userId && request.resource.data.keys().hasOnly(['read']);
        // Users cannot delete notifications.
        allow delete: if false;
      }
    }

    // Only Admins can read logs.
    // In a production app, writing logs should be done via a secure backend.
    // For this app, we'll restrict writing to Admins as well.
    match /logs/{logId} {
      allow read, write: if isAdmin();
    }

    // Static pages can be read by anyone, but only managed by Admins.
    match /pages/{pageSlug} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Users can create support tickets. Admins can read/update them.
    match /supportTickets/{ticketId} {
      allow create: if request.auth != null;
      allow read, update: if isAdmin();
      allow delete: if false; // Don't allow deletion of tickets
    }
  }
}
