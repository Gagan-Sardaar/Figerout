rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if a user is an admin.
    function isAdmin(userId) {
      return exists(/databases/$(database)/documents/users/$(userId))
        && get(/databases/$(database)/documents/users/$(userId)).data.role == 'Admin';
    }

    // User Profiles
    // Temporarily allow any authenticated user to read any profile for debugging.
    match /users/{userId} {
      allow read: if request.auth != null;
      allow update: if request.auth.uid == userId || isAdmin(request.auth.uid);
    }

    // User-specific saved colors
    match /users/{userId}/colors/{colorId} {
      // Users can read, write, and delete their own colors.
      allow read, write, delete: if request.auth.uid == userId;
    }

    // Static pages (e.g., about-us, privacy-policy)
    match /pages/{pageSlug} {
      // Anyone can read static pages.
      allow read: if true;
      // Only admins can create or update pages.
      allow write: if isAdmin(request.auth.uid);
    }
  }
}
